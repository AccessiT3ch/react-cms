{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2022",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
